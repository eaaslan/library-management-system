@model IEnumerable<WebApplication1.Models.AppUser>

<div class="container-fluid">
    <h2 class="mt-3">User Management</h2>

    <form method="get" asp-controller="Admin" asp-action="Users" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="emailFilter">Filter by Email</label>
                <input type="text" class="form-control" id="emailFilter" name="emailFilter"
                       value="@ViewBag.EmailFilter" placeholder="Enter title">
        </div>
         <div class="form-group col-md-4">
                <label for="nameFilter">Filter by FirstName</label>
                <input type="text" class="form-control" id="nameFilter" name="nameFilter"
                   value="@ViewBag.NameFilter" placeholder="Enter title">
        </div>
           <div class="form-check mt-4">

                    <input type="checkbox" class="form-check-input" id="includeInactive" name="includeInactive" value="true" @(ViewBag.IncludeInactive ? "checked" : "")>

                    <label class="form-check-label" for="includeInactive">Include Inactive Users</label>

                </div>
   
        <div class="form-group col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Users" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

    <div>
        <table class="table table-striped">
            <thead>
                <tr>

                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Active</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                {
                    <tr>

                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>

                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {

                            <span class="badge bg-dark">Inactive</span>
                            }
                        </td>
                        <td>@user.PhoneNumber</td>
                        @* <td> *@

                            @* @if (user.isActive) *@
                            @* { *@
                            @*     <span class="badge bg-success">Active</span> *@
                            @* } *@
                            @* else *@
                            @* { *@

                            @*     <span class="badge bg-dark">Inactive</span> *@
                            @* } *@
                            @* //add isActive bool later *@

                        @* </td> *@
                      
                        <td>
                            <a asp-controller="Admin" asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-warning">Update</a>
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
     
                            </td>

                    </tr>

                }

            </tbody>
        </table>

    </div>
</div>

